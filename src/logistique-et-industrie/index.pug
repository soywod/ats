extends ../index.pug

block append head
  title ATS Agence | Logistique & Industrie
  link(rel="stylesheet", href="../global.css")
  link(rel="stylesheet", href="./global.css")

block content
  #section-1
    ats-parallaxe-box(ratio="0.02", direction="reverse")
      img#section-1-bg-far(src="./section-1-bg-far.jpeg", alt="")
    ats-parallaxe-box(ratio="0.01", type="rotate-y")
      img#section-1-bg-close(src="./section-1-bg-close.png", alt="")
    img#section-1-personnage(src="./section-1-personnage.png", alt="")
    ats-anchor-header(to="section-5", bottom="25%", left="23%", label-left="120%", label-top="40%")
      | Signalétique
    ats-anchor-header(to="section-7", bottom="30%", left="40%", label-top="110%", label-left="-30%")
      | Mobiliers
    ats-anchor-header(to="section-2", theme="dark", top="25%", right="42%", label-top="0.5rem", label-left="110%")
      | Vêtements
      br
      | et EPI
    ats-anchor-header(to="section-7", bottom="40%", right="35%", label-bottom="110%", label-left="-10%")
      | Mobiliers
  ats-container
    #section-2
      #section-2-a
        h3#section-2-a-title Vêtements et epi
        img#section-2-a-img(src="./section-2-a.png", alt="")
      ats-lazy-section#section-2-b
        h4#section-2-b-title Vêtements HVI, Standard, Chaussures, EPI, spécifiques, Accessoires
        img#section-2-b-img(src="./section-2-b.png", alt="")
      ats-lazy-section#section-2-c
        h3#section-2-c-title Tous les métiers de la logistique, stockage frais ou sec
        ats-contact-link
      ats-lazy-section#section-2-d(threshold="0.2")
        h3#section-2-d-title L'enjeu : confort, sécurité, image
    ats-lazy-section
      ats-container#section-3
        ats-stepper
  ats-frame#section-4
    img#section-4-bg(src="./section-4-a.jpeg", alt="")
    ats-intersection-box-group#section-4-bgs
      ats-intersection-box(threshold="0.6")
        img.section-4-bg(src="./section-4-b.jpeg", alt="")
      ats-intersection-box(threshold="0.8")
        img.section-4-bg(src="./section-4-c.jpeg", alt="")
      ats-intersection-box(threshold="1")
        img.section-4-bg(src="./section-4-d.jpeg", alt="")
    ats-container#section-4-content(slot="animated-content")
      h3#section-4-title Personnalisation de vêtements
      p#section-4-p
        | Broderie, sérigraphie, transfert
        br
        | Que choisir ?
      ats-contact-link
  ats-container
    #section-5
      ats-lazy-section#section-5-a
        img#section-5-a-1-img(src="./section-5-a-1.png", alt="")
        img#section-5-a-2-img(src="./section-5-a-2.png", alt="")
        h3#section-5-a-title
          | Signalétique &
          br
          | signalisation
      ats-lazy-section#section-5-b
        h3#section-5-b-title La sécurité a un coût, l'accident aussi !
      ats-lazy-section#section-5-c(threshold="0.2")
        h4#section-5-c-title Panneaux, Miroirs, Signalétique, Balisage sol, Informations
        img#section-5-c-img(src="./section-5-c.png", alt="")
      ats-lazy-section#section-5-d
        h3#section-5-d-title Maquettes personnalisées gratuites
        ats-contact-link
  ats-frame#section-6
    img#section-6-bg(src="./section-6-a.jpeg", alt="")
    ats-intersection-box-group#section-6-bgs
      ats-intersection-box(threshold="0.5")
        img.section-6-bg(src="./section-6-b.jpeg", alt="")
      ats-intersection-box(threshold="0.6")
        img.section-6-bg(src="./section-6-c.jpeg", alt="")
      ats-intersection-box(threshold="0.7")
        img.section-6-bg(src="./section-6-d.jpeg", alt="")
      ats-intersection-box(threshold="0.8")
        img.section-6-bg(src="./section-6-e.jpeg", alt="")
      ats-intersection-box(threshold="0.9")
        img.section-6-bg(src="./section-6-f.jpeg", alt="")
    ats-container#section-6-content(slot="animated-content")
      h3#section-6-title
        | Zéro
        br
        | accident !
      ats-contact-link
  ats-container
    #section-7
      ats-lazy-section#section-7-a
        div
          h3#section-7-a-title Mobilier spécialisé
        img#section-7-a-img(src="./section-7-a.png", alt="")
      ats-lazy-section#section-7-b
        h4#section-7-b-title
          | Bancs, corbeilles, Cendriers, protections Ralentisseurs, Passe-câbles, Abris, Réfectoires
        img#section-7-b-img(src="./section-7-b.png", alt="")
      ats-lazy-section#section-7-c
        h3#section-7-c-title Protection des personnels, Des matériels
        ats-contact-link
      ats-lazy-section#section-7-d(threshold="0.2")
        h3#section-7-d-title Solutions sur mesure, études sur site
      ats-advise-section#section-7-e
  ats-lazy-section
    img#section-8(src="./section-8.jpeg", alt="", width="100%")
